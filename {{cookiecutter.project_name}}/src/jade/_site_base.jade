- load sekizai_tags menu_tags i18n

doctype html
html(lang="{% raw %}{{ LANGUAGE_CODE }}{% endraw %}")
  head
    title
      - block pagetitle
        | Base

    - include '{{ cookiecutter.project_name }}/partials/_head.jade'
    | {% raw %}{% render_block "css" %}{% endraw %}

  body(ng-app="app" ng-controller="MainController")

    - include 'partials/_header.jade'

    .container
      ul.breadcrumbs
        - block breadcrumb
        li.active
          a(href='/{{ cookiecutter.project_name }}/') {{ cookiecutter.project_name }}

    .container
      .subnavigation
        -block subnavi

        h5 {% trans 'Categories' %}
        ul.side-nav
          li
            a(href="#") Module One

    .main
      -block body
        - block content
          h5 {% raw %}{% trans '{% endraw %}{{ cookiecutter.project_name }}{% raw %}' %}{% endraw %}


  - include 'partials/_footer.jade'
  - include 'partials/_scripts.jade'
  | {% raw %}{% render_block "js" %}{% endraw %}
